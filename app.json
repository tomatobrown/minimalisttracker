{
  "expo": {
    "name": "End of Day",
    "slug": "EODApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "eodapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Track your daily habits and wellness metrics. Log questions like sleep, exercise, hydration, and more to visualize trends and build healthy routines.",
    "primaryColor": "#20B2AA",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.eodapp.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSUserTrackingUsageDescription": "We don't track you. This is just a required field.",
        "NSCalendarsUsageDescription": "To schedule daily reminders for your check-ins.",
        "NSLocationWhenInUseUsageDescription": "Not used in this app.",
        "NSPhotoLibraryUsageDescription": "Not used in this app."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b1a69285-8a56-43a8-aada-9fd6f1739f2c"
      },
      "revenueCatIosApiKey": process.env.REVENUECAT_IOS_API_KEY,
      "revenueCatAndroidApiKey": process.env.REVENUECAT_ANDROID_API_KEY
    }
  }
}